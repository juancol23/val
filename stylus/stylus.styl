@import 'normalize.styl'
// @import 'font.styl'
.slides
	img
		height 100%
		width 30%


gris_claro = #676767
gris_oscuro =#676767
.logo
	width 50% !important
	height auto !important
	text-align center
.tm
		font-size 3em
		margin .2em .3em
img
	-webkit-transition: all 0.7s ease
	transition: all 0.7s ease
.none
	display none

.noneno
	display block !important
.desc
	font-size 2em
.ir-arriba 
	display none
	padding 20px
	background none repeat scroll 0% 0% #837D82
	font-size 20px
	color #fff
	cursor pointer
	position  fixed
	bottom 21px
	right 107px

.center
	text-align center
.centrado
	text-align center
	margin 1em 		
.action
	font-size: 3em
	color white
.inline-block
	display inline-block
.hr
	width 80%
	margin 1em auto
	
.space-redes
	padding 1em
	text-align center
